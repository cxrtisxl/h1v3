{
  "hive": {
    "id": "my-hive",
    "data_dir": "/data",
    "front_agent_id": "front",
    "compact_threshold": 8000,
    "preset_file": "preset.json (always preset.json for running in a Docker container)"
  },
  "providers": {
    "default": {
      "type": "openai",
      "api_key": "sk-or-v1-API-KEY",
      "base_url": "https://openrouter.ai/api/v1",
      "model": "openai/gpt-4o"
    },
    "smart": {
      "type": "openai",
      "api_key": "sk-or-v1-API-KEY",
      "base_url": "https://openrouter.ai/api/v1",
      "model": "anthropic/claude-sonnet-4"
    }
  },
  "connectors": {
    "telegram": {
      "token": "YOUR_TELEGRAM_BOT_TOKEN",
      "agent_id": "front (optional)",
      "allow_from": []
    }
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8080,
    "api_key": "YOUR_API_KEY"
  }
}
