{
  "hive": {
    "id": "my-hive",
    "data_dir": "/data",
    "front_agent_id": "front",
    "compact_threshold": 8000,
    "preset_file": "preset.json (always preset.json for running in a Docker container)"
  },
  "providers": {
    "default": {
      "type": "openai",
      "api_key": "$OPENROUTER_API_KEY",
      "base_url": "https://openrouter.ai/api/v1",
      "model": "z-ai/glm-4.5-air:free"
    },
    "smart": {
      "type": "openai",
      "api_key": "$OPENROUTER_API_KEY",
      "base_url": "https://openrouter.ai/api/v1",
      "model": "openai/gpt-4o"
    }
  },
  "connectors": {
    "telegram": {
      "token": "$TELEGRAM_BOT_TOKEN",
      "agent_id": "front (optional)",
      "allow_from": []
    }
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8080,
    "api_key": "$H1V3_API_KEY"
  }
}
